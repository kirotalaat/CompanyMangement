@model Department 
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name </h1>

<div asp-validation-summary="All"></div>

<form asp-action="edit">
    <div class="mb-3">
        <label class="form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code">
        <span class="text-danger" asp-validation-for="Code"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="DateCreation"></label>
        <input class="form-control" asp-for="DateCreation">
        <span class="text-danger" asp-validation-for="DateCreation"></span>
    </div>
    <button type="save" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-info"> Back To List </a>
</form>

